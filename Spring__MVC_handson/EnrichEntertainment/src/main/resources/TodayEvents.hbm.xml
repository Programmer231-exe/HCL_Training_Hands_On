<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC 
	"-//Hibernate/Hibernate Mapping DTD//EN"
	"http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
	<class name="org.hcltrainingdemo.model.TodayEvents"
		table="todayevents">
		<meta attribute="class-description">
			This class contains today event details
		</meta>

		<id name="eventid" type="int" column="eventid">
			<generator class="native"></generator>
		</id>
		<property name="eventName" column="eventname"
			type="java.lang.String" />
		<property name="eventOrganizer" column="eventorganizer"
			type="java.lang.String" />
		<property name="time" column="eventtime"
			type="java.lang.String" />


	</class>

</hibernate-mapping>